<!DOCTYPE html>
<html lang="en">

<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<style>
    * {
        list-style: none;
    }

    a {
        text-decoration: none;
    }

    .active {
        font-weight: bold;
        color: orangered !important;
    }

    .btn-orange {
        color: white;
        background: orangered !important;
    }

    .text-orange {
        color: orangered;
    }
</style>

<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid container-md">
            <a class="navbar-brand" href="#">
                <img src="/assets/logo.jpg" class="ms-3" width="50px" height="50px" alt="">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup"
                aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <ul class="navbar-nav mx-auto text-center">
                    <li>
                        <a class="nav-link" aria-current="page" href="./">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="./dashboard">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link " href="./Emteam">Employee Management</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="./Tasktodo">Task List</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="./RJobs">Recruitement</a>
                    </li>
                </ul>
                <div class="d-flex justify-content-center">
                    <a href=""></a>
                </div>
            </div>
        </div>
    </nav>

    <div class="container mt-5 mb-2 py-3" style="max-width: 900px;">
        <h1 class="text-center">Edit Job</h1>
        <div class="container mt-5">
            <% if(data) { %>
                <% data.forEach(element=> { %>

                    <form class="mt-5" action="/EditJob" method="post" enctype="multipart/form-data">
                        <form class="mt-5" action="/EditJob" method="post" enctype="multipart/form-data">
                            <input type="text" style="display: none;" name="id" value="<%= element.id %>">

                            <!-- Job Title -->
                            <div class="row mb-4">
                                <div class="col">
                                    <div class="form-outline mb-4">
                                        <label class="form-label" for="jobTitle">Job Title:</label>
                                        <input type="text" id="jobTitle" name="job_title" class="form-control"
                                            value="<%= element.job_title %>" required />
                                    </div>
                                </div>
                            </div>

                            <!-- Total Candidates -->
                            <div class="row mb-4">
                                <div class="col">
                                    <div class="form-outline mb-4">
                                        <label class="form-label" for="totalCandidates">Total Candidates:</label>
                                        <input type="number" id="totalCandidates" name="total_candidates"
                                            class="form-control" value="<%= element.total_candidates %>" required />
                                    </div>
                                </div>
                            </div>

                            <!-- Vacancies -->
                            <div class="row mb-4">
                                <div class="col">
                                    <div class="form-outline mb-4">
                                        <label class="form-label" for="vacancies">Vacancies:</label>
                                        <input type="number" id="vacancies" name="vacancies" class="form-control"
                                            value="<%= element.vacancies %>" required />
                                    </div>
                                </div>
                            </div>

                            <!-- Department -->
                            <div class="row mb-4">
                                <div class="col">
                                    <div class="form-outline mb-4">
                                        <label class="form-label" for="department">Department:</label>
                                        <input type="text" id="department" name="department" class="form-control"
                                            value="<%= element.department %>" required />
                                    </div>
                                </div>
                            </div>

                            <!-- Job Description -->
                            <div class="row mb-4">
                                <div class="col">
                                    <div class="form-outline mb-4">
                                        <label class="form-label" for="jobDescription">Job Description:</label>
                                        <textarea id="jobDescription" name="job_description" class="form-control"
                                            rows="4" required><%= element.job_description %></textarea>
                                    </div>
                                </div>
                            </div>

                            <!-- Job Requirements -->
                            <div class="row mb-4">
                                <div class="col">
                                    <div class="form-outline mb-4">
                                        <label class="form-label" for="jobRequirements">Job Requirements:</label>
                                        <textarea id="jobRequirements" name="job_requirements" class="form-control"
                                            rows="4" required><%= element.job_requirements %></textarea>
                                    </div>
                                </div>
                            </div>

                            <!-- Employment Type -->
                            <div class="row mb-4">
                                <div class="col">
                                    <div class="form-outline mb-4">
                                        <label class="form-label" for="employmentType">Employment Type:</label>
                                        <select id="employmentType" name="employment_type" class="form-control"
                                            required>
                                            <option value="Full-Time" <% if (element.employment_type==='Full-Time' ) {
                                                %>selected<% } %>>Full-Time</option>
                                            <option value="Part-Time" <% if (element.employment_type==='Part-Time' ) {
                                                %>selected<% } %>>Part-Time</option>
                                            <option value="Contract" <% if (element.employment_type==='Contract' ) { %>
                                                selected
                                                <% } %>>Contract
                                            </option>
                                            <option value="Temporary" <% if (element.employment_type==='Temporary' ) {
                                                %>selected<% } %>>Temporary</option>
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <!-- Location -->
                            <div class="row mb-4">
                                <div class="col">
                                    <div class="form-outline mb-4">
                                        <label class="form-label" for="location">Location:</label>
                                        <input type="text" id="location" name="location" class="form-control"
                                            value="<%= element.location %>" required />
                                    </div>
                                </div>
                            </div>

                            <!-- Salary Range -->
                            <div class="row mb-4">
                                <div class="col">
                                    <div class="form-outline mb-4">
                                        <label class="form-label" for="salaryRange">Salary Range:</label>
                                        <input type="text" id="salaryRange" name="salary_range" class="form-control"
                                            value="<%= element.salary_range %>" required />
                                    </div>
                                </div>
                            </div>

                            <!-- Application Deadline -->
                            <div class="row mb-4">
                                <div class="col">
                                    <div class="form-outline mb-4">
                                        <label class="form-label" for="applicationDeadline">Application
                                            Deadline:</label>
                                        <input type="date" id="applicationDeadline" name="application_deadline"
                                            class="form-control" value="<%= element.application_deadline %>" />
                                    </div>
                                </div>
                            </div>

                            <div class="row mb-4">
                                <div class="col">
                                    <div class="form-outline mb-4">
                                        <label class="form-label" for="experienceLevel">Experience Level:</label>
                                        <select id="experienceLevel" name="experience_level" class="form-control">
                                            <option value="Entry-Level" <% if (element.experience_level==='Entry-Level'
                                                ) { %>selected<% } %>Entry-Level</option>
                                            <option value="Mid-Level" <% if (element.experience_level==='Mid-Level' ) {
                                                %>selected<% } %>>Mid-Level</option>
                                            <option value="Senior-Level" <% if
                                                (element.experience_level==='Senior-Level' ) { %>selected<% } %>
                                                    >Senior-Level</option>
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <!-- Education Requirements -->
                            <div class="row mb-4">
                                <div class="col">
                                    <div class="form-outline mb-4">
                                        <label class="form-label" for="educationRequirements">Education
                                            Requirements:</label>
                                        <input type="text" id="educationRequirements" name="education_requirements"
                                            class="form-control" value="<%= element.education_requirements %>" />
                                    </div>
                                </div>
                            </div>

                            <!-- Skills Required -->
                            <div class="row mb-4">
                                <div class="col">
                                    <div class="form-outline mb-4">
                                        <label class="form-label" for="skillsRequired">Skills Required:</label>
                                        <textarea id="skillsRequired" name="skills_required" class="form-control"
                                            rows="4" required><%= element.skills_required %></textarea>
                                    </div>
                                </div>
                            </div>

                            <!-- Job Benefits -->
                            <div class="row mb-4">
                                <div class="col">
                                    <div class="form-outline mb-4">
                                        <label class="form-label" for="jobBenefits">Job Benefits:</label>
                                        <textarea id="jobBenefits" name="job_benefits" class="form-control" rows="4"
                                            required><%= element.job_benefits %></textarea>
                                    </div>
                                </div>
                            </div>

                            <!-- Contact Information -->
                            <div class="row mb-4">
                                <div class="col">
                                    <div class="form-outline mb-4">
                                        <label class="form-label" for="contactInformation">Contact Information:</label>
                                        <input type="text" id="contactInformation" name="contact_information"
                                            class="form-control" value="<%= element.contact_information %>" />
                                    </div>
                                </div>
                            </div>

                            <!-- Posting Date -->
                            <div class="row mb-4">
                                <div class="col">
                                    <div class="form-outline mb-4">
                                        <label class="form-label" for="postingDate">Posting Date:</label>
                                        <input type="date" id="postingDate" name="posting_date" class="form-control"
                                            value="<%= element.posting_date %>" />
                                    </div>
                                </div>
                            </div>

                            <div class="row mb-4">
                                <div class="col">
                                    <div class="form-outline mb-4">
                                        <label class="form-label" for="jobCategory">Job Category:</label>
                                        <input type="text" id="jobCategory" name="job_category" class="form-control"
                                            value="<%= element.job_category %>" />
                                    </div>
                                </div>
                            </div>


                            <div class="row mb-4">
                                <div class="col">
                                    <div class="form-outline mb-4">
                                        <label class="form-label" for="responsibilities">Responsibilities:</label>
                                        <textarea id="responsibilities" name="responsibilities" class="form-control"
                                            rows="4" required><%= element.responsibilities %></textarea>
                                    </div>
                                </div>
                            </div>



                            <div class="row mb-4">
                                <div class="col">
                                    <div class="form-outline mb-4">
                                        <label class="form-label" for="applicationMethod">Application Method:</label>
                                        <input type="text" id="applicationMethod" name="application_method"
                                            class="form-control" value="<%= element.application_method %>" required />
                                    </div>
                                </div>
                            </div>
                            <div class="row mb-4">
                                <div class="col">
                                    <div class="form-outline mb-4">
                                        <label class="form-label" for="additionalNotes">Additional Notes or
                                            Comments:</label>
                                        <textarea id="additionalNotes" name="additional_notes" class="form-control"
                                            rows="4"><%= element.additional_notes %></textarea>
                                    </div>
                                </div>
                            </div>

                            <div class="row mb-4">
                                <div class="col">
                                    <div class="form-outline mb-4">
                                        <label class="form-label" for="rimage">Related Image:</label>
                                        <input type="file" id="rimage" name="relatedImage" class="form-control" />
                                    </div>
                                </div>
                            </div>
                            <div class="row mb-4">
                                <div class="col">
                                    <div class="form-outline mb-4">
                                        <label class="form-label" for="filepath">File Path:</label>
                                        <input type="text" id="filepath" name="filepath" class="form-control"
                                            value="<%= element.relatedImage %>" />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <button type="submit" class="btn btn-primary">Commit Changes</button>
                            </div>
                        </form>

                        <% }); %>
                            <% } %>
        </div>
</body>

</html>