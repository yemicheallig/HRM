<!DOCTYPE html>
<html lang="en">

<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<style>
    * {
        list-style: none;
    }

    a {
        text-decoration: none;
    }

    .active {
        font-weight: bold;
        color: orangered !important;
    }

    .btn-orange {
        color: white;
        background: orangered !important;
    }

    .text-orange {
        color: orangered;
    }
</style>

<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid container-md">
            <a class="navbar-brand" href="#">
                <img src="/assets/logo.jpg" class="ms-3" width="50px" height="50px" alt="">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup"
                aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <ul class="navbar-nav mx-auto text-center">
                    <li>
                        <a class="nav-link" aria-current="page" href="./">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="./dashboard">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link " href="./Emteam">Employee Management</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="./Tasktodo">Task List</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link " href="./RJobs">Recruitement</a>
                    </li>
                </ul>
                <div class="d-flex justify-content-center">
                    <a href=""></a>
                </div>
            </div>
        </div>
    </nav>

    <div class="container mt-5 mb-2 py-3" style="max-width: 900px;">
        <a href="/Tasktodo">Back</a>
        <h1 class="text-center">Edit Task</h1>
        <div class="container mt-5">
            <% if(data){ %>
                <% data.forEach(element=> { %>
                    <form class="mt-5" action="/editTask/" method="post" enctype="multipart/form-data">
                        <input type="text" style="display: none;" name="taskid" value="<%= element.id %>">
                        <div class="row mb-4">
                            <div class="col">
                                <div data-mdb-input-init class="form-outline mb-4">
                                    <label class="form-label" for="taskTitle">1. Task Title:</label>
                                    <input type="text" id="taskTitle" name="task_title" class="form-control"
                                        value="<%= element.task_title %>" />
                                </div>
                            </div>
                        </div>
                        <div class="row mb-4">
                            <div class="col">
                                <div data-mdb-input-init class="form-outline mb-4">
                                    <label class="form-label" for="taskDescription">2. Task Description:</label>
                                    <textarea class="form-control mb-2" id="taskDescription" name="task_description"
                                        rows="3"><%= element.task_description %></textarea>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-4">
                            <div class="col">
                                <div data-mdb-input-init class="form-outline mb-4">
                                    <label class="form-label" for="priority">3. Priority:</label>
                                    <select id="priority" name="priority" class="form-control">
                                        <option>
                                            <%= element.priority %>
                                        </option>
                                        <option value="Low">Low</option>
                                        <option value="Medium">Medium</option>
                                        <option value="High">High</option>
                                        <option value="Urgent">Urgent</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="row mb-4">
                            <div class="col">
                                <div data-mdb-input-init class="form-outline mb-4">
                                    <label class="form-label" for="status">4. Status:</label>
                                    <select id="status" name="status" class="form-control">
                                        <option value="Low" <% if (element.priority==='Low' ) { %>selected<% } %>>Low
                                        </option>
                                        <option value="Medium" <% if (element.priority==='Medium' ) { %>selected<% } %>
                                                >Medium</option>
                                        <option value="High" <% if (element.priority==='High' ) { %>selected<% } %>>High
                                        </option>
                                        <option value="Urgent" <% if (element.priority==='Urgent' ) { %>selected<% } %>
                                                >Urgent</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="row mb-4">
                            <div class="col">
                                <div data-mdb-input-init class="form-outline mb-4">
                                    <label class="form-label" for="startDate">5. Start Date:</label>
                                    <input type="date" id="startDate" name="start_date" class="form-control"
                                        value="<%= element.start_date %>" />
                                </div>
                            </div>
                        </div>
                        <div class="row mb-4">
                            <div class="col">
                                <div data-mdb-input-init class="form-outline mb-4">
                                    <label class="form-label" for="dueDate">6. Due Date:</label>
                                    <input type="date" id="dueDate" name="due_date" class="form-control"
                                        value="<%= element.due_date  %>" />
                                </div>
                            </div>
                        </div>
                        <div class="row mb-4">
                            <div class="col">
                                <div data-mdb-input-init class="form-outline mb-4">
                                    <label class="form-label" for="attachments">7. Attachments:</label>
                                    <br>
                                    <span>Any relevant files or documents related to the element.</span>
                                    <input type="file" id="attachments" name="attachments" class="form-control" />
                                </div>
                            </div>
                        </div>
                        <div class="row mb-4">
                            <div class="col">
                                <div data-mdb-input-init class="form-outline mb-4">
                                    <label class="form-label" for="department">9. Department:</label>
                                    <input type="text" id="department" name="department"
                                        value="<%= element.department  %>" class="form-control" />
                                </div>
                            </div>
                        </div>
                        <div class="row mb-4">
                            <div class="col">
                                <div data-mdb-input-init class="form-outline mb-4">
                                    <label class="form-label" for="progress">10. Progress (%):</label>
                                    <input type="number" id="progress" max="100" name="progress"
                                        value="<%= element.progress%>" class="form-control" />
                                </div>
                            </div>
                        </div>
                        <div class="row mb-4 d-none">
                            <div class="col">
                                <div data-mdb-input-init class="form-outline mb-4">
                                    <label class="form-label" for="filepath">filepath:</label>
                                    <input type="text" id="filepath" name="filepath" value="<%= element.attachments %>"
                                        class="form-control" />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <button type="submit" class="btn btn-primary">Commit Changes</button>
                        </div>
                    </form>
                    <% }); %>
                        <% } %>

        </div>

</body>

</html>