    <div class="container mt-5 mb-2 border py-3 shadow" style="max-width: 900px;">
        <h1 class="text-center">Registeration Form</h1>
        <% if (message) { %>
            <div class="alert alert-danger" role="alert">
                <%= message %>
            </div>
            <% } %>
                <div class="container mt-5">
                    <form class="mt-5" action="/RegisterApplicant" method="post" enctype="multipart/form-data">
                        <div class="row mb-4">
                            <div class="col">
                                <div data-mdb-input-init class="form-outline mb-4">
                                    <label class="form-label" for="fullName">1. Full Name: </label>
                                    <input type="text" id="fullName" name="full_name" class="form-control" required />
                                </div>
                            </div>
                        </div>
                        <div class="row mb-4">
                            <div class="col">
                                <div data-mdb-input-init class="form-outline mb-4">
                                    <label class="form-label" for="email">2. Email: </label>
                                    <input type="email" id="email" name="email" class="form-control" required />
                                </div>
                            </div>
                        </div>
                        <div class="row mb-4">
                            <div class="col">
                                <div data-mdb-input-init class="form-outline mb-4">
                                    <label class="form-label" for="password">3. Password: </label>
                                    <input type="password" id="password" name="password" class="form-control"
                                        required />
                                </div>
                            </div>
                        </div>
                        <div class="row mb-4">
                            <div class="col">
                                <div data-mdb-input-init class="form-outline mb-4">
                                    <label class="form-label" for="age">4, Age </label>
                                    <input type="age" id="age" name="age" min="0" class="form-control" required />
                                </div>
                            </div>
                        </div>
                        <div class="row mb-4">
                            <div class="col">
                                <div data-mdb-input-init class="form-outline mb-4">
                                    <label class="form-label" for="positionTitle">5. Position title: (Position You Are
                                        Good At)</label>
                                    <input type="text" id="positionTitle" name="position_title" class="form-control"
                                        required />
                                </div>
                            </div>
                        </div>
                        <div class="row mb-4">
                            <div class="col">
                                <div data-mdb-input-init class="form-outline mb-4">
                                    <label class="form-label" for="areaOfExpertise">6. The area of expertise you
                                        studied:
                                    </label>
                                    <input type="text" id="areaOfExpertise" name="area_of_expertise"
                                        class="form-control" required />
                                </div>
                            </div>
                        </div>
                        <div class="row mb-4">
                            <div class="col">
                                <div data-mdb-input-init class="form-outline mb-4">
                                    <label class="form-label" for="educationLevel">7. Education Level: </label>
                                    <select name="education_level" class="form-control mb-2" id="">
                                        <option value="Diploma">Diploma</option>
                                        <option value="Degree">Degree</option>
                                        <option value="Masters">Masters</option>
                                        <option value="PHD">PHD</option>
                                        <option value="other">other</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="row mb-4">
                            <div class="col">
                                <div data-mdb-input-init class="form-outline mb-4">
                                    <label class="form-label" for="cgpa">8. CGPA: </label>
                                    <input type="text" id="cgpa" name="cgpa" class="form-control" required />
                                </div>
                            </div>
                        </div>
                        <div class="row mb-4">
                            <div class="col">
                                <div data-mdb-input-init class="form-outline mb-4">
                                    <label class="form-label" for="phoneNo">9. Phone No: </label>
                                    <input type="text" id="phoneNo" name="phone_no" class="form-control" required />
                                </div>
                            </div>
                        </div>
                        <div class="row mb-4">
                            <div class="col">
                                <div data-mdb-input-init class="form-outline mb-4">
                                    <label class="form-label" for="otherSkills">10. Other Skills: </label>
                                    <textarea class="form-control mb-2" id="otherSkills" name="other_skills" rows="3"
                                        placeholder="Major Subject" required></textarea>
                                </div>
                            </div>
                        </div>
                        <div data-mdb-input-init class="form-outline mb-4">
                            <label class="form-label" for="education">11. EDUCATION</label>
                            <ul class="container">
                                <li>
                                    <label class="form-label" for="undergradSchoolName">
                                        College/University</label>
                                    <input type="text" id="undergradSchoolName" name="undergrad_school_name"
                                        class="form-control mb-2" placeholder="Name Of College" required />
                                    From: <input type="date" id="undergradSchoolFrom" name="undergrad_school_from"
                                        class="form-control mb-2" placeholder="From" required />
                                    To: <input type="date" id="undergradSchoolTo" name="undergrad_school_to"
                                        class="form-control mb-2" placeholder="To" required />
                                    <textarea class="form-control mb-2" id="undergradMajorSubject"
                                        name="undergrad_major_subject" rows="3" placeholder="Major Subject"
                                        required></textarea>
                                </li>
                                <li>
                                    <label class="form-label" for="highSchoolName">High School</label>
                                    <input type="text" id="highSchoolName" name="high_school_name"
                                        class="form-control mb-2" placeholder="Name Of School" required />
                                    From: <input type="date" id="highSchoolFrom" name="high_school_from"
                                        class="form-control mb-2" placeholder="From" required />
                                    To: <input type="date" id="highSchoolTo" name="high_school_to"
                                        class="form-control mb-2" placeholder="To" required />
                                </li>
                                <li>
                                    <label class="form-label" for="techSchoolName">Technical/Vocational School</label>
                                    <input type="text" id="techSchoolName" name="tech_school_name"
                                        class="form-control mb-2" placeholder="Name Of School" required />
                                    From: <input type="date" id="techSchoolFrom" name="tech_school_from"
                                        class="form-control mb-2" placeholder="From" required />
                                    To: <input type="date" id="techSchoolTo" name="tech_school_to"
                                        class="form-control mb-2" placeholder="To" required />
                                    <textarea class="form-control mb-2" id="techSchoolMajorSubject"
                                        name="tech_school_major_subject" rows="3" placeholder="Major Subject"
                                        required></textarea>
                                </li>
                            </ul>
                        </div>
                        <div data-mdb-input-init class="form-outline mb-4">
                            <label class="form-label" for="languages">12. LANGUAGES</label>
                            <ul class="container">
                                <li>
                                    <label class="form-label" for="primaryLanguage">Primary/First Spoken/Native
                                        Language</label>
                                    <input type="text" id="primaryLanguage" name="primary_language"
                                        class="form-control mb-2" placeholder="Enter your primary language" required />
                                </li>
                                <li>
                                    <label class="form-label" for="language1">Language 1</label>
                                    <input type="text" id="language1" name="language1" class="form-control mb-2"
                                        placeholder="Enter language" />
                                    <label class="form-label" for="competencyLevel1">Competency Level:</label>
                                    <select class="form-control mb-2" id="competencyLevel1" name="competency_level1">
                                        <option value="Basic Knowledge">Level I: Basic Knowledge</option>
                                        <option value="Limited Knowledge">Level II: Limited Knowledge</option>
                                        <option value="Good Working Knowledge">Level III: Good Working Knowledge
                                        </option>
                                        <option value="Fluent">Level IV: Fluent</option>
                                        <option value="Professional Translator/Interpreter">Level V: Professional
                                            Translator/Interpreter</option>
                                    </select>
                                </li>
                                <li>
                                    <label class="form-label" for="language2">Language 2</label>
                                    <input type="text" id="language2" name="language2" class="form-control mb-2"
                                        placeholder="Enter language" />
                                    <label class="form-label" for="competencyLevel2">Competency Level:</label>
                                    <select class="form-control mb-2" id="competencyLevel2" name="competency_level2">
                                        <option value="Basic Knowledge">Level I: Basic Knowledge</option>
                                        <option value="Limited Knowledge">Level II: Limited Knowledge</option>
                                        <option value="Good Working Knowledge">Level III: Good Working Knowledge
                                        </option>
                                        <option value="Fluent">Level IV: Fluent</option>
                                        <option value="Professional Translator/Interpreter">Level V: Professional
                                            Translator/Interpreter</option>
                                    </select>
                                </li>
                                <li>
                                    <label class="form-label" for="language3">Language 3</label>
                                    <input type="text" id="language3" name="language3" class="form-control mb-2"
                                        placeholder="Enter language" />
                                    <label class="form-label" for="competencyLevel3">Competency Level:</label>
                                    <select class="form-control mb-2" id="competencyLevel3" name="competency_level3">
                                        <option value="Basic Knowledge">Level I: Basic Knowledge</option>
                                        <option value="Limited Knowledge">Level II: Limited Knowledge</option>
                                        <option value="Good Working Knowledge">Level III: Good Working Knowledge
                                        </option>
                                        <option value="Fluent">Level IV: Fluent</option>
                                        <option value="Professional Translator/Interpreter">Level V: Professional
                                            Translator/Interpreter</option>
                                    </select>
                                </li>
                            </ul>
                        </div>
                        <div class="row mb-4">
                            <div class="col">
                                <div data-mdb-input-init class="form-outline mb-4">
                                    <label class="form-label" for="coverLetter">13. Work Experiance:</label>
                                    <br>
                                    <ul>
                                        <li>
                                            <label class="form-label" for="jobFrom">Total years of experience</label>
                                            <input type="number" id="total_year_of_experience"
                                                name="total_year_of_experience" class="form-control mb-2"
                                                placeholder="total year of experience" required />
                                        </li>
                                        <li>
                                            <label class="form-label" for="jobDuties">Describe your major
                                                duties/responsibilities and accomplishments.(If You're 0 years type
                                                Junior)</label>
                                            <textarea class="form-control mb-2" id="jobDuties" name="job_duties"
                                                rows="3" placeholder="" required></textarea>
                                        </li>
                                        <li>
                                            <label class="form-label" for="reasonForLeaving">Reason(s) for Leaving Your
                                                Previous Job(If you are a starter, write 'I am a starter')</label>
                                            <textarea class="form-control mb-2" id="reasonForLeaving"
                                                name="leaving_reason" rows="3" placeholder="" required></textarea>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="row mb-4">
                            <div class="col">
                                <div data-mdb-input-init class="form-outline mb-4">
                                    <label class="form-label" for="resume">14. CV:</label>
                                    <input type="file" id="resume" name="resume" class="form-control" required />
                                </div>
                            </div>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </form>
                </div>
    </div>

